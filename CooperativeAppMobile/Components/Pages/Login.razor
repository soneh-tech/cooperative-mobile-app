@page "/login"
@page "/"
<div class="bg-gray-200">
        <main class="main-content  mt-0">
            <div class="page-header align-items-start min-vh-100" style="background-image: url('/images/bg.png');">
                <span class="mask bg-gradient-dark opacity-6"></span>
                <div class="container my-auto">
                    <div class="row">
                        <div class="col-lg-4 col-md-8 col-12 mx-auto">
                            <div class="card z-index-0 fadeIn3 fadeInBottom">
                                <div style="text-align: center; padding: 20px !important">
                                    <img id="Image1" src="/images/logo.png" runat="server"  /><br />
                                  <b><span style="font-style: italic; color: #D81B60 !important;">QUEENS MPCS </span></b>
                                   <br /> <i>Securely login to your QueensMPCS</i>
                                </div>
                                <div class="card-body">
                                    <div role="form" class="text-start">
                                        <div class="input-group input-group-outline my-3">
                                           
                                            <input placeholder="Username or  Phone Number" class="form-control">

                                        </div>

                                        <div class="input-group input-group-outline mb-3">
                                          
                                        <input class="form-control" placeholder="Password" type="password">

                                        </div>
                                        <div class="form-check form-switch d-flex align-items-center mb-3">
                                            <input class="form-check-input" type="checkbox" id="rememberMe">
                                            <label class="form-check-label mb-0 ms-2" for="rememberMe">Remember me</label>
                                        </div>
                                        <div class="text-center">
                                            <button class="btn bg-gradient-primary w-100 my-4 mb-2">Log In </button>
                                        </div>
                                        <div style="text-align: center">
                                            <label ForeColor="Red"></label>
                                        </div>
                                        <p class="mt-4 text-sm text-center">
                                            Don't have an account?
                    <a href="/Register" class="text-primary text-gradient font-weight-bold">Create one now</a>
                                        </p>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div> 
                    <br />
                    <div class="row" style="text-align:center; color:white">
                    <p style="text-align:center; color:white !important;"><a ForeColor="White" href="https://www.queensmpcs.com/">Back to public website</a> &nbsp;|&nbsp; <a ForeColor="White" href="/ForgotPassword">Forgot Password?</a> </p>
                    </div>
                </div>
                <footer class="footer position-absolute bottom-2 py-2 w-100">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-sm-12" style="text-align:center !important">
                                <ul class="nav nav-footer">
                                    <li class="nav-item">
                                        <strong>Copyright &copy;&nbsp;<span runat="server" id="currYear"></span> <a href="#">QUEENS MPCS </a>.</strong> All Rights Reserved.
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </main>
</div>
